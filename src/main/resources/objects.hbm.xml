<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.dev.Objects.Entities">

    <class name="ConfigObject" table="config">
        <id name="oid" type="int" column="oid">
            <generator class="native"/>
        </id>
        <property name="configKey" type="string" column="config_key"/>
        <property name="configValue" type="string" column="config_value"/>
        <property  name="deleted" type="boolean">
            <column name="deleted"  default="false"/>
        </property>
    </class>


    <class name="TranslationObject" table="translations" lazy="false">
        <id name="oid" type="int" column="oid">
            <generator class="native"/>
        </id>
        <property name="translationKey" column="translation_key" type="string"/>
        <property name="translationValue" column="translation_value" type="string"/>
        <property name="en" column="en" type="string"/>
        <property  name="deleted" type="boolean">
            <column name="deleted"  default="false"/>
        </property>
    </class>

    <class name="LangObject" table="languages">
        <id name="oid" type="int" column="oid">
            <generator class="native"/>
        </id>
        <property name="code" type="int" column="code"/>
        <property name="name" type="string" column="name"/>
        <property  name="active" type="boolean">
            <column name="active"  default="false"/>
        </property>
        <property  name="deleted" type="boolean">
            <column name="deleted"  default="false"/>
        </property>

    </class>


    <class name="Seller" table="sellers">
        <id name="oid" type="int" column="oid">
            <generator class="native"/>
        </id>
        <property name="name" type="string" column="name"/>
        <property name="lastName" type="string" column="last_name"/>
        <property name="phone" type="int" column="phone"/>
        <property name="adress" type="string" column="adress"/>
    </class>


    <class name="Ticket" table="ticket">
        <id name="oid" type="int" column="oid">
            <generator class="native"/>
        </id> 
        <property name="name" type="string" column="name"/>
        <property name="ticketNumber" type="string" column="ticket_number"/>
        <property name="dateOfDraw" type="date" column="date_of_draw"/>
    </class>

</hibernate-mapping>
